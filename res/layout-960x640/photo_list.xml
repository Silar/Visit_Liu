<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg9">
  
  <RelativeLayout 
  android:layout_weight="3.9"
  android:id="@+id/rel"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <Button
  android:id="@+id/pl_b1"
  android:background="@drawable/return_opposite"
  android:layout_marginLeft="40px"
  android:layout_marginTop="10px"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"></Button>
  <TextView 
  android:id="@+id/pl_tv1"
  android:text="游记相片"
  android:textSize="22sp"
  android:textColor="#343434"
  android:layout_centerInParent="true"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"/>
  <Button 
  android:layout_alignParentRight="true"
  android:background="@drawable/home"
  android:layout_marginRight="40px"
  android:layout_marginTop="10px"
  android:id="@+id/pl_b2" 
  android:layout_width="wrap_content" 
  android:layout_height="wrap_content"></Button>
  </RelativeLayout>
  
  <LinearLayout 
    android:layout_weight="4.2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView 
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ver_line"/>
    </LinearLayout>

  <LinearLayout 
  android:layout_weight="1.3"
  android:background="#E5E3C7"
  android:layout_marginLeft="40px"
  android:layout_marginRight="40px"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <ListView 
  android:layout_margin="8px"
  android:cacheColorHint="#00000000"
  android:fadeScrollbars="false"
  android:divider="#29B8F2"
  android:dividerHeight="2.0dp"
  android:id="@+id/pl_list"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  </ListView>
 </LinearLayout>
 
  
  <LinearLayout 
    android:layout_weight="4.2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView 
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ver_line"/>
    </LinearLayout>
  
  <RelativeLayout 
  android:layout_weight="3.6" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <Button 
  android:layout_centerInParent="true"
  android:layout_height="55dip"
  android:layout_width="fill_parent"
  android:id="@+id/pl_b3"  
  android:background="@drawable/button_main"
  android:text="再拍一张"
  android:textSize="30sp"
  android:textColor="#9D9DA3"
  android:gravity="center"
  android:drawableLeft="@drawable/add"
  android:layout_marginLeft="40px"
  android:layout_marginRight="40px"
  android:paddingLeft="26px"
  android:paddingRight="26px"></Button>
</RelativeLayout>
 </LinearLayout>