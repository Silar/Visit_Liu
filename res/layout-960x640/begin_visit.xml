<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/begin_visit9">
    <RelativeLayout 
    android:layout_weight="3.6"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <Button 
    android:background="@drawable/return_opposite"
    android:id="@+id/bv_b1" 
    android:layout_marginLeft="50px"
    android:layout_marginTop="20px"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"></Button>
    <ImageView 
    android:layout_centerInParent="true"
    android:background="@drawable/logo"
    android:layout_marginTop="20px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <Button 
    android:layout_alignParentRight="true"
    android:background="@drawable/home"
    android:layout_marginRight="50px"
    android:layout_marginTop="20px"
    android:id="@+id/bv_b2" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"></Button>
    </RelativeLayout>
    
    <RelativeLayout 
    android:layout_weight="1.5"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView 
    android:layout_marginTop="40px"
    android:id="@+id/bv_tv1"
    android:textSize="34sp"
    android:textColor="#2C465A"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"/>
    <TextView 
    android:layout_below="@id/bv_tv1"
    android:layout_marginTop="20px"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="进行时......"
    android:textSize="32sp"
    android:textColor="#9D9DA3"
    android:gravity="center"
    android:id="@+id/bv_tv2"/>
    
    <Button 
    android:layout_below="@id/bv_tv2"
    android:background="@drawable/later"
    android:layout_marginTop="60px"
    android:id="@+id/bv_b4" 
    android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"></Button>
    </RelativeLayout>
    
    <RelativeLayout 
    android:layout_weight="3.2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <Button 
  android:layout_centerInParent="true"
  android:layout_height="55dip"
  android:layout_width="fill_parent"
  android:id="@+id/bv_b3"  
  android:background="@drawable/button_main"
  android:text="拍一张"
  android:textSize="30sp"
  android:textColor="#9D9DA3"
  android:gravity="center"
  android:drawableLeft="@drawable/add"
  android:layout_marginLeft="50px"
  android:layout_marginRight="50px"
  android:paddingLeft="26px"
  android:paddingRight="26px"></Button>
    
    </RelativeLayout>
    
</LinearLayout>
