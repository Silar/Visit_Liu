<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg1">
  
  <RelativeLayout 
  android:layout_weight="3.45"
  android:id="@+id/rel"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <Button
  android:id="@+id/pl_b1"
  android:background="@drawable/return_opposite"
  android:layout_marginLeft="30px"
  android:layout_marginTop="20px"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"></Button>
  <TextView 
  android:id="@+id/pl_tv1"
  android:text="游记相片"
  android:textSize="25sp"
  android:textColor="#343434"
  android:layout_centerInParent="true"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"/>
  
  <Button 
  android:layout_alignParentRight="true"
  android:background="@drawable/home"
  android:layout_marginRight="30px"
  android:layout_marginTop="20px"
  android:id="@+id/pl_b2" 
  android:layout_width="wrap_content" 
  android:layout_height="wrap_content"/>
  </RelativeLayout>

  <LinearLayout 
  android:layout_weight="1.3"
  android:background="#E5E3C7"
  android:layout_marginLeft="30px"
  android:layout_marginRight="30px"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <ListView 
  android:cacheColorHint="#00000000" 
  android:layout_margin="8px"
  android:fadeScrollbars="false"
  android:divider="#29B8F2"
  android:dividerHeight="2.0dp"
  android:id="@+id/pl_list"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  </ListView>
 </LinearLayout>
  
   <RelativeLayout 
  android:layout_weight="3.1" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <Button 
  android:layout_centerInParent="true"
  android:layout_height="55dip"
  android:layout_width="fill_parent"
  android:id="@+id/pl_b3"  
  android:background="@drawable/button_main"
  android:text="再拍一张"
  android:textSize="30sp"
  android:textColor="#9D9DA3"
  android:gravity="center"
  android:drawableLeft="@drawable/add"
  android:layout_marginLeft="35px"
  android:layout_marginRight="35px"
  android:paddingLeft="25px"
  android:paddingRight="25px"></Button>
</RelativeLayout>
 </LinearLayout>