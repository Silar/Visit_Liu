<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/bg_v" android:orientation="vertical">
    <LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_weight="2.35">
    </LinearLayout>
    
    <LinearLayout 
    android:layout_weight="2.6"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView 
    android:layout_marginLeft="25px"
    android:layout_marginRight="25px"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ver_line"/>
    
    </LinearLayout>
   
    <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1.5">
    <TextView 
    android:layout_marginTop="10px"
    android:layout_marginLeft="25px"
    android:text="游记名称:" 
    android:textSize="18sp"
    android:textColor="#686664"
    android:id="@+id/nv_tv2" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"></TextView>
    <EditText 
    android:id="@+id/nv_et1"
    android:layout_marginTop="10px"
    android:layout_marginRight="25px"
    android:layout_toRightOf="@id/nv_tv2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>
    <TextView 
    android:layout_marginLeft="25px"
    android:layout_marginTop="10px"
    android:layout_below="@id/nv_et1"
    android:id="@+id/nv_tv3"
    android:text="游记描述:"
    android:textSize="18sp"
    android:textColor="#686664"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"/>
    <EditText 
    android:id="@+id/nv_et2"
    android:layout_toRightOf="@id/nv_tv3"
    android:layout_below="@id/nv_et1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="25px"
    android:layout_marginTop="10px"
    android:inputType="textMultiLine" 
    android:lines="2"
    android:maxLines="3"/>
    <Button 
    android:layout_marginTop="10px"
    android:text="确定" 
    android:textSize="20sp"
    android:textColor="#CFBCBC"
    android:background="@drawable/meb"
    android:id="@+id/nv_b1" 
    android:layout_below="@id/nv_et2"
    android:layout_centerInParent="true"
    android:layout_width="110px" 
    android:layout_height="70px"></Button>
    <Button 
    android:layout_marginTop="10px"
    android:text="取消" 
    android:textSize="20sp"
    android:textColor="#CFBCBC"
    android:background="@drawable/meb"
    android:id="@+id/nv_b2" 
    android:layout_alignParentRight="true"
    android:layout_below="@id/nv_et2"
    android:layout_marginRight="40px"
    android:layout_width="110px" 
    android:layout_height="70px"></Button>
    </RelativeLayout>
     
     
    <LinearLayout 
    android:layout_weight="2.6"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView 
    android:layout_marginLeft="25px"
    android:layout_marginRight="25px"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ver_line"/>
    </LinearLayout>
    
   <RelativeLayout  
    android:layout_weight="1.5"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView 
    android:text="已创建游记:"
    android:textColor="#686664"
    android:textSize="20sp"
    android:layout_marginLeft="30px"
    android:id="@+id/nv_tv4"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"/>
    <TextView 
    android:layout_below="@id/nv_tv4"
    android:id="@+id/nv_tiv5"
    android:text="游图"
    android:textSize="15sp"
    android:textColor="#323231"
    android:layout_marginLeft="80px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    
    <TextView 
    android:layout_below="@id/nv_tv4"
    android:id="@+id/nv_tiv7"
    android:textSize="15sp"
    android:textColor="#323231"
    android:layout_alignParentRight="true"
    android:layout_marginRight="80px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    
    <ImageView 
    android:layout_below="@id/nv_tiv5"
    android:id="@+id/nv_iv"
    android:background="#E5E3C7"
    android:layout_marginLeft="80px"
    android:layout_width="75dp"
    android:layout_height="100dp"
    android:padding="5dp"
    android:scaleType="centerCrop"/>
    
    <ImageView
    android:layout_below="@id/nv_tiv5"
    android:id="@+id/nv_iv0"
    android:background="#E5E3C7"
    android:layout_alignParentRight="true"
    android:layout_marginRight="80px"
    android:layout_width="75dp"
    android:layout_height="100dp"
    android:padding="5dp"
    android:scaleType="centerCrop"/>
    
    <TextView 
    android:layout_below="@id/nv_iv"
    android:id="@+id/nv_tiv6"
    android:text="游图"
    android:textSize="15sp"
    android:textColor="#323231"
    android:layout_marginLeft="80px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
     <TextView 
    android:layout_below="@id/nv_iv0"
    android:id="@+id/nv_tiv8"
    android:textSize="15sp"
    android:textColor="#323231"
    android:layout_alignParentRight="true"
    android:layout_marginRight="80px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
